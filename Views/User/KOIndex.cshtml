
@{
    ViewBag.Title = "Knockout CRUD";
}

<h2>Knockout CRUD</h2>
<link href="~/Scripts/laypage/skin/laypage.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout-3.4.2.js"></script>
<script src="~/Scripts/knockout.mapping-latest.js"></script>
<script src="~/Scripts/laypage/laypage.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/User/UserKO.js"></script>
<div id="divBody">
    姓名：<input type="text" data-bind="value:Query.Name" id="Name" name="Name">
    职业：<input type="text" data-bind="value:Query.Profession" id="Profession" name="Profession">
    <button type="button" data-bind="click:getList">查询</button>
    <p></p>
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr data-bind="click:$root.sortData" style="cursor:pointer;">
                <th sort="Id">编号<i class="upDown"></i></th>
                <th sort="Name">姓名<i class="upDown"></i></th>
                <th>性别</th>
                <th sort="Profession">职业<i class="upDown"></i></th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:ListData">
            <tr>
                <td data-bind="text:Id"></td>
                <td data-bind="text:Name"></td>
                <td data-bind="text:Sex==0 ? '男':'女'"></td>
                <td data-bind="text:Profession"></td>
                <td>
                    <button data-bind="click:$root.editData">编辑</button>
                    <button data-bind="click:$root.delData">删除</button>
                </td>
            </tr>
        </tbody>
    </table>
    <p></p>
    <div id="notice_pages"></div>
    <p></p>
    <button data-bind="click:addData">添加用户</button>

    <div class="modal" id="EditDialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel">编辑用户</h4>
                </div>
                <div class="modal-body">
                    <form class="editForm" id="editForm">
                        <div class="row infoBox">
                            <input type="hidden" data-bind="value:CurData.Id" id="Id" name="Id" class="form-control ">
                            <div class="col-sm-4 t">姓名</div>
                            <div class="col-sm-8"><input type="text" data-bind="value:CurData.Name" id="Name" name="Name" class="form-control"></div>
                        </div>
                        <div class="row infoBox">
                            <div class="col-sm-4 t">性别</div>
                            <div class="col-sm-8">
                                <select data-bind="value:CurData.Sex" id="Sex" name="Sex" class="form-control">
                                    <option value="0">男</option>
                                    <option value="1">女</option>
                                </select>
                            </div>
                        </div>
                        <div class="row infoBox">
                            <div class="col-sm-4 t">职业</div>
                            <div class="col-sm-8"><input type="text" data-bind="value:CurData.Profession" id="Profession" name="Profession" class="form-control"></div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                    <button type="button" data-bind="click:saveData" class="btn btn-primary">保 存</button>
                </div>
            </div>
        </div>
    </div>
</div>